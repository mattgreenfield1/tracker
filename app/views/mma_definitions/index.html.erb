<p id="notice"><%= notice %></p>

<h1>Listing Mma Definitions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mma_definitions.each do |mma_definition| %>
      <tr>
        <td><%= mma_definition.name %></td>
        <td><%= link_to 'Show', mma_definition %></td>
        <td><%= link_to 'Edit', edit_mma_definition_path(mma_definition) %></td>
        <td><%= link_to 'Destroy', mma_definition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

