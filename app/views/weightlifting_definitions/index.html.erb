<p id="notice"><%= notice %></p>

<h1>Listing Weightlifting Definitions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weightlifting_definitions.each do |weightlifting_definition| %>
      <tr>
        <td><%= weightlifting_definition.name %></td>
        <td><%= link_to 'Show', weightlifting_definition %></td>
        <td><%= link_to 'Edit', edit_weightlifting_definition_path(weightlifting_definition) %></td>
        <td><%= link_to 'Destroy', weightlifting_definition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

