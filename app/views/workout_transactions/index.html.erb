<p id="notice"><%= notice %></p>

<h1>Listing Workout Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Details</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workout_transactions.each do |workout_transaction| %>
      <tr>
        <td><%= workout_transaction.details %></td>
        <td><%= workout_transaction.date %></td>
        <td><%= workout_transaction.time %></td>
        <td><%= link_to 'Show', workout_transaction %></td>
        <td><%= link_to 'Edit', edit_workout_transaction_path(workout_transaction) %></td>
        <td><%= link_to 'Destroy', workout_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

